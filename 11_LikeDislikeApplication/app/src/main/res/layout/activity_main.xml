<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        app:srcCompat="@drawable/banner" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="18dp"
        android:text="Like Dislike Application on Image Button" />

    <LinearLayout
        android:layout_width="164dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="147dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/likeInc"
            android:layout_width="wrap_content"
            android:layout_height="153dp"
            android:layout_weight="1"
            app:srcCompat="@raw/likeinc" />



        <ImageView
            android:id="@+id/dislikeInc"
            android:layout_width="177dp"
            android:layout_height="97dp"
            android:layout_weight="1"
            app:srcCompat="@raw/dislikeinc" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="164dp"
        android:layout_height="139dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/likeDec"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:layout_weight="1"
            app:srcCompat="@raw/likedec" />
        <ImageView
            android:id="@+id/dislikeDec"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            app:srcCompat="@raw/dislikedec" />
    </LinearLayout>

    <TextView
        android:id="@+id/displayMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Like / Dislike messages will display here. " />

</LinearLayout>